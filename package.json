{
  "name": "secure-messenger-desktop",
  "version": "1.0.0",
  "description": "Secure Messenger Desktop - Chat List + Sync Simulator",
  "main": "dist/electron/main.js",
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild:node": "npm rebuild better-sqlite3 --build-from-source",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && node electron-dev.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "compile": "tsc -p tsconfig.electron.json",
    "start": "npm run compile && electron .",
    "test": "vitest run --exclude src/electron/database.test.ts",
    "test:all": "npm run rebuild:node && vitest run",
    "test:watch": "vitest --exclude src/electron/database.test.ts"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "sqlite",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "ws": "^8.16.0"
  }
}
